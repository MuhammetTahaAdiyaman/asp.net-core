@model Course

    <div class="row">
    <div class="col-md-3">
        <img src="~/img/@Model.Image" class="img-fluid rounded-start">
        </div>
            <div class="col-md-9">
                
                    <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id">
                         <h5 class="card-title">@Model.Title</h5>
                    </a>
                    <p class="card-text">@Model.Description</p>
                    <div>
                        @if(Model.Tags != null){
                        @foreach(var tag in @Model.Tags){
                            <span class="badge bg-primary">@tag</span>
                        }
                    }
                    </div>
        </div>
    </div>
